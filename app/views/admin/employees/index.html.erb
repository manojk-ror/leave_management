<h1>Listing employees</h1>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Date Of Joining</th>
    <th>Admin Status</th>
    <th></th>
    <th></th>
    <th></th>
    </tr>
<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.email %></td>
    <td><%= employee.date_of_joining %></td>
    <td><%= employee.admin_status %></td>
    <td><%= link_to 'Show', admin_employee_path(employee), :class => "btn" %></td>
    <td><%= link_to 'Edit', edit_admin_employee_path(employee),:class => "btn" %></td>
    <td><%= link_to 'Destroy', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
    <td><%= link_to 'Fill Personal Info',show_perticular_personal_info_admin_personal_info_path(employee), :class => "btn"%> </td>
    <td><%= link_to 'All leaves', show_perticular_leaves_admin_employee_path(employee), :class => "btn" %></td>
    <td><%= link_to 'Salary detail', add_salary_admin_salary_path(employee), :class => "btn" %></td> 
  </tr>
<% end %>
</table>
