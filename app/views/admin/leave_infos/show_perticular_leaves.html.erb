<div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="#">Leave-Management</a>
        <ul class="nav">
          <li><%= link_to '<i class="icon-home" ></i> Home'.html_safe, root_path %></li>
          <li><%= link_to '<i class="icon-back" ></i> Back'.html_safe, admin_leave_infos_path %></li>
        </ul>  
        <ul class ="nav pull-right">
          <li><%= link_to 'logout', destroy_employee_session_path, :method => :delete %></li>
      </ul>
    </div>
  </div> 

<div class="container">
  <div class="row-fluid">
    <div class="span12 well">
      <center><legend>Listing leave_infos</legend></center>

      <table class ="table">
        <tr>
          <th>Refferal ids</th>
          <th>Reference status</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Leave Days<th>
          <th>Status of day</th>
          <th>Leave status</th>
          <th></th>
          <th></th>
        </tr>
        <% count = 0 %>
      <% @employe.leave_infos.each do |leave_info| %>
        <tr>
          <td><%= leave_info.applicant_id %></td> 
          <td><%= leave_info.reference_status %></td>                 
          <td><%= leave_info.start_date %></td>
          <td><%= leave_info.end_date %></td>
          <td><%= count += distance_of_time_in_words(leave_info.start_date ,leave_info.end_date).to_i  %></td>
           <%# total += count %>
          <td><%= leave_info.status_of_day %></td>
          <td><%= leave_info.leave_status %></td>
          <td><%= link_to 'Show', admin_leave_info_path(leave_info), :class => "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_admin_leave_info_path(leave_info), :class => "btn btn-info" %></td>
        </tr>
      <% end %>
      </table>

      <br />


    </div>
  </div>
</div>

