<div class="container">
  <div class="row-fluid">
    <div class=" span12 well">
      <legend>Find leaves between dates</legend>
      <%= render :partial => "leave_show" %> 
      <ul class="nav nav-tabs" id="myTab">
        <li ><%= link_to  'Pending' , "#pending", :class => "btn btn-warning" %></li>
        <li ><%= link_to  'Approved' , "#approved", :class => "btn btn-success"  %></li>
        <li ><%= link_to  'Rejected' , "#rejected", :class => "btn btn-danger" %></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane " id="pending">
          <legend>All Pending leaves</legend>
          <%= render :partial => "leave_index", :locals => {:panding_leaves => check_leave_status(@leave_infos,"pending"), :status_color => "warning" } %>
        </div>
    
        <div class="tab-pane" id="approved">
          <legend>All Approved leaves</legend>
          <%= render :partial => "leave_index", :locals => {:panding_leaves => check_leave_status(@leave_infos,"Approved"), :status_color => "success" } %>
        </div>
    
        <div class="tab-pane" id="rejected">
          <legend>All Rejected leaves</legend>
          <%= render :partial => "leave_index", :locals => {:panding_leaves => check_leave_status(@leave_infos,"Rejected"), :status_color => "error"} %>
        </div>
      </div> 
    </div>
  </div>
</div>
 
 <script>
  $(function () {
    $('#myTab a:first').tab('show');
    $('#myTab a').click(function (e) {
      e.preventDefault();
      $(this).tab('show');
    });
  });
</script>



