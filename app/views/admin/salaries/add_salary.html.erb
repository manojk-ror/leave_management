<div class="container">
  <div class="row-fluid">
    <div class= "offset2 span8 well">
       <% link_to 'Back',leave_infos_path, :class => "btn btn-info" %>
      <%= form_for([:admin,@salary],:html=>{:onsubmit=>"ragistrationForm();) do |f| %>
